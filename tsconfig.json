{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop" :true
  },
  "lib" :["ES2020.Promise"],
  "include": [
    "src",
    "test",
    ".eslintrc.js",
  ],
  "exclude": [
    "./node_modules",
    "./build"
  ],
}
